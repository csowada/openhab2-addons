<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="ebus" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="test">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge" />
		</supported-bridge-type-refs>

		<label>STATIC Wolf CGB2</label>
		<description>Sample thing for eBUS Binding</description>

		<channel-groups>
			<channel-group id="boiler" typeId="boilerGroupType" />
			<channel-group id="burner" typeId="channelGroupTypeID" />
			<channel-group id="dhw" typeId="channelGroupTypeID" />
			<channel-group id="heating" typeId="channelGroupTypeID" />
		</channel-groups>

		<!-- <channels> <channel id="channel1" typeId="sample-channel" /> </channels> -->

		<properties>
			<property name="vendor">Wolf GmbH</property>
			<property name="hadwareVersion">4.3</property>
			<property name="firmwareVersion">1.6</property>
			<property name="modelId">BM2</property>
			<property name="serialNumber">12345ABC</property>
			<property name="myproperty"></property>
		</properties>

		<config-description>

			<parameter-group name="param-group">
				<label>parameter-group</label>
				<description>parameter-group desc</description>
			</parameter-group>

			<parameter name="masterAddress" type="text" groupName="param-group">
				<label>Master Address</label>
				<description>eBus Master Address as Hex value</description>
				<default>FF</default>
			</parameter>

			<parameter name="slaveAddress" type="text" groupName="param-group">
				<label>Slave Address</label>
				<description>eBus Slave Address as Hex value</description>
				<default>04</default>
			</parameter>

		</config-description>

	</thing-type>

	<channel-group-type id="boilerGroupType">

		<label>Domestic Hot Water</label>
		<description>Domestic Hot Water</description>

		<channels>
			<channel id="temp_dhw" typeId="temperature">
				<label>DHW temperature</label>
			</channel>
			
			<channel id="program_heating" typeId="program">
				<label>Heating program</label>
			</channel>
		</channels>
	</channel-group-type>

	<channel-group-type id="channelGroupTypeID">

		<label>Domestic Hot Water</label>
		<description>Domestic Hot Water</description>

		<channels>
			<channel id="temp_dhw" typeId="temperature">
				<label>DHW temperature</label>
			</channel>
		</channels>
	</channel-group-type>

	<!-- Sample Channel Type -->
	<channel-type id="sample-channelxxx">
		<item-type>Number</item-type>
		<label>EBus Binding Channel</label>
		<description>Sample channel for EBus Binding</description>

		<config-description-ref uri="bridge-type:my-great-binding:my-bridge-name" />
	</channel-type>

	<channel-type id="sample-channel">
		<item-type>Number</item-type>
		<label>EBus Binding Channel</label>
		<description>Sample channel for EBus Binding</description>

		<config-description>
			<parameter name="polling" type="integer">
				<label>Polling</label>
				<unitLabel>sec</unitLabel>
			</parameter>
		</config-description>
	</channel-type>

	<channel-type id="program">
		<item-type>Number</item-type>
		<label>EBus Binding Channel</label>
		<description>Sample channel for EBus Binding</description>

		<state min="0" max="3" step="1.0">
			<options>
				<option value="0">standby</option>
				<option value="1">auto</option>
				<option value="2">heating mode</option>
				<option value="3">economy mode</option>
			</options>
		</state>

		<config-description>
			<parameter name="polling" type="integer">
				<label>Polling</label>
				<unitLabel>sec</unitLabel>
			</parameter>
		</config-description>
	</channel-type>

	<channel-type id="temperature">

		<item-type>Number</item-type>
		<label>Temperature</label>
		<description>Temperature in degrees celsius</description>
		<category>Temperature</category>
		
		<tags><tag>Tag1</tag></tags>
		
		<state readOnly="true" pattern="%.1f Â°C">
		</state>

		<config-description>
			<parameter name="polling" type="integer">
				<label>Polling</label>
				<description>Poll every n Seconds</description>
				<unitLabel>sec</unitLabel>
				<context></context>
			</parameter>
		</config-description>
	</channel-type>

</thing:thing-descriptions>
